@model FashionStore.Models.Category

@{
    ViewBag.Title = "Thêm Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h1 class="page-title">Thêm mới Danh mục</h1>
    <p class="page-subtitle">Tạo phân loại sản phẩm mới để mở rộng cấu trúc cửa hàng.</p>
</div>

<div class="d-flex justify-content-center">
    <div class="content-card col-12 col-lg-7">
        <div class="card-header">
            <div class="card-title">
                <i class="bi bi-plus-circle-dotted"></i> Thông tin danh mục mới
            </div>
        </div>

        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger small mb-3" })

                <div class="row">
                    <div class="col-12 mb-4">
                        <label class="form-label">Thuộc Nhóm</label>
                        @Html.DropDownList("GroupId", null, "-- Chọn nhóm danh mục --", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.GroupId, "", new { @class = "text-danger small" })
                    </div>

                    <div class="col-md-6 mb-4">
                        <label class="form-label">Tên Danh mục</label>
                        @Html.EditorFor(model => model.CatName, new { htmlAttributes = new { @class = "form-control", placeholder = "VD: Quần Jean Nam", id = "CatName" } })
                        @Html.ValidationMessageFor(model => model.CatName, "", new { @class = "text-danger small" })
                    </div>

                    <div class="col-md-6 mb-4">
                        <label class="form-label">Slug (URL)</label>
                        @Html.EditorFor(model => model.CatSlug, new { htmlAttributes = new { @class = "form-control", placeholder = "quan-jean-nam", id = "CatSlug" } })
                        @Html.ValidationMessageFor(model => model.CatSlug, "", new { @class = "text-danger small" })
                    </div>

                    <div class="col-md-6 mb-4">
                        <label class="form-label">Thứ tự hiển thị</label>
                        @Html.EditorFor(model => model.SortOrder, new { htmlAttributes = new { @class = "form-control", type = "number", Value = "0" } })
                        @Html.ValidationMessageFor(model => model.SortOrder, "", new { @class = "text-danger small" })
                    </div>

                    <div class="col-md-6 mb-4">
                        <label class="form-label">Trạng thái ban đầu</label>
                        <div class="form-control d-flex align-items-center" style="background: rgba(255,255,255,0.02); border-style: dashed;">
                            <div class="form-check form-switch mb-0">
                                @Html.CheckBoxFor(model => model.IsActive.Value, new { @class = "form-check-input", role = "switch", id = "IsActive" })
                                <label class="form-check-label ms-2" for="IsActive">Kích hoạt ngay</label>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-4" style="border-color: var(--border-color);">

                <div class="d-flex justify-content-end gap-3">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Lưu Danh mục
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            // Hàm chuyển đổi Tiếng Việt có dấu sang Slug không dấu
            function generateSlug(text) {
                return text.toString().toLowerCase()
                    .normalize('NFD')                           // Tách dấu
                    .replace(/[\u0300-\u036f]/g, "")           // Xóa dấu
                    .replace(/[đĐ]/g, 'd')                      // Xử lý chữ đ
                    .replace(/([^0-9a-z-\s])/g, '')             // Xóa ký tự đặc biệt
                    .replace(/(\s+)/g, '-')                     // Thay khoảng trắng bằng -
                    .replace(/-+/g, '-')                        // Xóa các dấu - thừa
                    .replace(/^-+|-+$/g, '');                   // Xóa - ở đầu và cuối
            }

            $("#CatName").on("input", function () {
                var title = $(this).val();
                $("#CatSlug").val(generateSlug(title));
            });
        });
    </script>
}