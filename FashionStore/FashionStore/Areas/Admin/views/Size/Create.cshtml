@model FashionStore.Models.Size

@{
    ViewBag.Title = "Thêm Size";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">Thêm mới Kích thước</h1>
        <p class="page-subtitle">Khởi tạo các mã Size tiêu chuẩn cho hệ thống sản phẩm.</p>
    </div>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

<div class="d-flex justify-content-center">
    <div class="content-card col-12 col-md-8 col-lg-6">
        <div class="card-header">
            <div class="card-title">
                <i class="bi bi-plus-circle"></i> Khai báo mã Size
            </div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mb-4">
                    <label class="form-label small text-secondary">Gợi ý chọn nhanh:</label>
                    <div class="d-flex flex-wrap gap-2">
                        @{
                            var suggestions = new[] {
                                new { Name = "S", Order = 1 },
                                new { Name = "M", Order = 2 },
                                new { Name = "L", Order = 3 },
                                new { Name = "XL", Order = 4 },
                                new { Name = "XXL", Order = 5 }
                            };
                        }
                        @foreach (var s in suggestions)
                        {
                            <button type="button" class="btn btn-sm btn-outline-primary quick-select"
                                    data-name="@s.Name" data-order="@s.Order">
                                + @s.Name
                            </button>
                        }
                    </div>
                </div>

                <hr class="my-4" style="border-color: var(--border-color); border-style: dashed;">

                <div class="form-group mb-4">
                    <label class="form-label">Tên Size (Mã)</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi- rulers"></i></span>
                        @Html.EditorFor(model => model.SizeCode, new { htmlAttributes = new { @class = "form-control", id = "txtSizeCode", placeholder = "VD: S, M, L, XL..." } })
                    </div>
                    @Html.ValidationMessageFor(model => model.SizeCode, "", new { @class = "text-danger small mt-1" })
                </div>

                <div class="form-group mb-4">
                    <label class="form-label">Thứ tự hiển thị</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-sort-down"></i></span>
                        @Html.EditorFor(model => model.SortOrder, new { htmlAttributes = new { @class = "form-control", id = "txtSortOrder", type = "number", placeholder = "Số nhỏ hiện trước" } })
                    </div>
                    <small class="text-secondary mt-1 d-block">Dùng để sắp xếp danh sách chọn Size ngoài cửa hàng.</small>
                    @Html.ValidationMessageFor(model => model.SortOrder, "", new { @class = "text-danger small mt-1" })
                </div>

                <div class="d-flex flex-column gap-2 mt-4">
                    <button type="submit" class="btn btn-primary py-2">
                        <i class="bi bi-save2"></i> Lưu dữ liệu
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary text-center py-2">
                        Hủy bỏ
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            // Xử lý sự kiện chọn nhanh
            $('.quick-select').click(function () {
                var name = $(this).data('name');
                var order = $(this).data('order');

                $('#txtSizeCode').val(name);
                $('#txtSortOrder').val(order);

                // Hiệu ứng highlight nhẹ để báo hiệu đã điền
                $('#txtSizeCode, #txtSortOrder').css('background-color', 'rgba(99, 102, 241, 0.1)');
                setTimeout(function() {
                    $('#txtSizeCode, #txtSortOrder').css('background-color', '');
                }, 500);
            });
        });
    </script>
}