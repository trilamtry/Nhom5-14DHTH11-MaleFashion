@model FashionStore.Models.Size

@{
    ViewBag.Title = "Sửa Size";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">Cấu hình Kích thước</h1>
        <p class="page-subtitle">Chỉnh sửa thông số hiển thị cho mã kích cỡ trong hệ thống.</p>
    </div>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

<div class="d-flex justify-content-center">
    <div class="content-card col-12 col-md-6">
        <div class="card-header">
            <div class="card-title">
                <i class="bi bi-pencil-square"></i> Cập nhật: <span class="text-primary">@Model.SizeCode</span>
            </div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.SizeId)

                <div class="form-group mb-4">
                    <label class="form-label">Tên định danh (Size Code)</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-tag"></i></span>
                        @Html.EditorFor(model => model.SizeCode, new { htmlAttributes = new { @class = "form-control", placeholder = "Ví dụ: XL, 42, 32W" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.SizeCode, "", new { @class = "text-danger small mt-1" })
                </div>

                <div class="form-group mb-4">
                    <label class="form-label">Thứ tự ưu tiên (Sort Order)</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-sort-numeric-down"></i></span>
                        @Html.EditorFor(model => model.SortOrder, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1" } })
                    </div>
                    <small class="text-secondary mt-1 d-block">Giá trị thấp hơn sẽ đứng trước trong bộ lọc sản phẩm.</small>
                </div>

                <hr class="my-4" style="border-color: var(--border-color);">

                <div class="d-flex flex-column gap-2">
                    <button type="submit" class="btn btn-primary py-2" style="background: var(--warning); border: none; color: #000; font-weight: 600;">
                        <i class="bi bi-check2-circle"></i> Xác nhận cập nhật
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary text-center py-2">
                        Hủy bỏ
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}