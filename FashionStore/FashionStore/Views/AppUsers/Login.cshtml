@{
    ViewBag.Title = "Đăng nhập";
}

<style>
    /* Chỉnh nền phù hợp với layout chung */
    .login-section {
        background: #f3f2ee; /* Màu nền nhẹ của template Male Fashion */
        padding: 80px 0;
    }

    .login-card {
        border: none;
        border-radius: 0; /* Bo góc vuông vức theo style shop */
        box-shadow: 0 15px 30px rgba(0,0,0,0.05);
    }

    /* Tiêu đề Đăng nhập */
    .login-header {
        background: #111111; /* Màu đen đặc trưng của header */
        color: #ffffff;
        padding: 30px;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    /* Input style */
    .form-control {
        height: 50px;
        border: 1px solid #e1e1e1;
        border-radius: 0;
        padding-left: 20px;
        font-size: 14px;
    }

        .form-control:focus {
            border-color: #111111;
            box-shadow: none;
        }

    .input-group-text {
        background: #ffffff;
        border: 1px solid #e1e1e1;
        border-right: none;
        border-radius: 0;
        color: #b7b7b7;
    }

    /* Nút bấm Đen/Đỏ của template */
    .btn-login {
        background: #111111;
        color: #ffffff;
        border: none;
        border-radius: 0;
        padding: 14px 30px;
        font-weight: 700;
        letter-spacing: 2px;
        text-transform: uppercase;
        transition: all 0.3s;
    }

        .btn-login:hover {
            background: #ff0000; /* Màu đỏ khi hover giống template */
            color: #fff;
        }

    .register-link {
        color: #111111;
        font-weight: 700;
        position: relative;
    }

        .register-link::after {
            content: "";
            position: absolute;
            width: 100%;
            height: 2px;
            background: #ff0000;
            bottom: -2px;
            left: 0;
        }
</style>

<section class="login-section mt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8">
                <div class="card login-card">

                    <div class="login-header text-center">
                        <h4 class="text-white m-0">Sign In</h4>
                    </div>

                    <div class="card-body p-5">
                        @using (Html.BeginForm("Login", "AppUsers", FormMethod.Post))
                        {
                            <div class="mb-4">
                                <label class="small text-uppercase fw-bold mb-2">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa fa-envelope-o"></i></span>
                                    <input type="email" class="form-control" placeholder="Email của bạn" name="Email" required />
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="small text-uppercase fw-bold mb-2">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                                    <input type="password" class="form-control" placeholder="••••••••" name="PasswordHash" required />
                                </div>
                            </div>

                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-login">
                                    Đăng nhập ngay
                                </button>
                            </div>

                            <div class="text-center mt-4">
                                <p class="text-muted small mb-1">Bạn chưa có tài khoản?</p>
                                <a href="@Url.Action("Register","AppUsers")" class="register-link text-decoration-none text-uppercase small">
                                    Tạo tài khoản mới
                                </a>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(ViewBag.ThongBao))
                        {
                            <div class="alert alert-danger border-0 mt-4 text-center small" style="border-radius: 0;">
                                <i class="fa fa-exclamation-circle me-1"></i> @ViewBag.ThongBao
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>