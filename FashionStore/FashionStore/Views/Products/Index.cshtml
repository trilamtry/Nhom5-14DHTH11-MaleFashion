@model IEnumerable<FashionStore.Models.Product>
@using System.Web.Mvc.Html
@{
    ViewBag.Title = "Cửa hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="shop spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="shop__sidebar">
                    <div class="shop__sidebar__search">
                        @using (Html.BeginForm("Index", "Products", FormMethod.Get))
                        {
                            <input type="text" name="search" placeholder="Tìm kiếm..." value="@Request.QueryString["search"]">
                            <button type="submit"><span class="icon_search"></span></button>
                        }
                    </div>
                    <div class="shop__sidebar__accordion">
                        <div class="accordion" id="accordionExample">
                            <div class="card">
                                <div class="card-heading">
                                    <a data-toggle="collapse" data-target="#collapseOne">Danh mục</a>
                                </div>
                                <div id="collapseOne" class="collapse show">
                                    <div class="card-body">
                                        <div class="shop__sidebar__categories">
                                            @using (Html.BeginForm("Index", "Products", FormMethod.Get, new { id = "filterForm" }))
                                            {
                                                <input type="hidden" name="search" value="@Request.QueryString["search"]" />

                                                <div class="mb-3">
                                                    @Html.DropDownList("catId", (SelectList)ViewBag.catId, "-- Tất cả danh mục --",
                                                        new { @class = "form-control custom-select-male", onchange = "this.form.submit()" })
                                                </div><br />

                                                <div class="card-heading mt-4">
                                                    <a href="javascript:void(0)">Khoảng giá</a>
                                                </div>
                                                <div class="mt-3">
                                                    <input type="number" name="minPrice" class="form-control mb-2" placeholder="Giá từ" value="@Request.QueryString["minPrice"]">
                                                    <input type="number" name="maxPrice" class="form-control mb-2" placeholder="Đến giá" value="@Request.QueryString["maxPrice"]">
                                                    <button type="submit" class="site-btn w-100 mt-2">Lọc giá</button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-9">
                <div class="shop__product__option">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="shop__product__option__left">
                                <p>Hiển thị @(Model?.Count() ?? 0) kết quả</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="col-12 text-center py-5">
                            <img src="~/assets/img/icon/search.png" alt="" class="mb-4" style="opacity: 0.5">
                            <h5 class="text-muted">Không tìm thấy sản phẩm nào phù hợp.</h5>
                            <a href="@Url.Action("Index", "Products")" class="primary-btn mt-3">Xóa bộ lọc</a>
                        </div>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="product__item">
                                    @{
                                        var img = item.ProductImages.FirstOrDefault(p => p.IsPrimary == true)?.ImageUrl
                                                  ?? item.ProductImages.FirstOrDefault()?.ImageUrl
                                                  ?? "product-1.jpg";
                                    }
                                    <a href="@Url.Action("Details", "Products", new { id = item.ProductId })">
                                        <div class="product__item__pic set-bg" data-setbg="@Url.Content("~/assets/img/product/" + img)">
                                            <ul class="product__hover">
                                                <li>
                                                    <img src="~/assets/img/icon/search.png" alt="">
                                                </li>
                                            </ul>
                                        </div>
                                    </a>
                                    <div class="product__item__text">
                                        <h6>@item.ProductName</h6>           
                                        <h5>@item.BasePrice.ToString("N0") đ</h5>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* 1. Khung sản phẩm nhô lên */
    .product__item {
        transition: all 0.3s ease-in-out;
        position: relative;
        background: #fff;
        padding-bottom: 15px;
        margin-bottom: 30px;
        z-index: 1;
    }

    .product__item:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
        z-index: 5;
    }

    /* 2. Đảm bảo Chữ và Giá luôn hiển thị */
    .product__item__text {
        text-align: center;
        padding-top: 20px;
        position: relative;
        opacity: 1 !important; /* Luôn hiển thị */
        visibility: visible !important; /* Luôn hiển thị */
    }

    .product__item__text h6 {
        color: #111;
        margin-bottom: 5px;
        transition: all 0.3s;
    }

    .product__item__text h5 {
        color: #111;
        font-weight: 700;
    }

    /* 3. Xử lý nút "+ More" hoặc "Add to cart" nếu nó làm ẩn tên */
    /* Thông thường template sẽ ẩn h6 và h5 để hiện nút này, ta sẽ đảo ngược lại */
    .product__item:hover .product__item__text h6,
    .product__item:hover .product__item__text h5 {
        opacity: 1;
        visibility: visible;
    }

    .product__item__text .add-cart {
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        opacity: 0; /* Ẩn nút More đi nếu bạn muốn giữ tên/giá */
        visibility: hidden;
        transition: all 0.3s;
        color: #e63333;
        font-weight: 700;
    }

    /* Nếu bạn vẫn muốn hiện nút More khi hover mà KHÔNG mất tên/giá,
       hãy dùng đoạn bên dưới: */
    .product__item:hover .add-cart {
        opacity: 1;
        visibility: visible;
        top: -15px; /* Đẩy nút More lên phía trên một chút */
    }

    /* 4. Hình ảnh */
    .product__item__pic {
        height: 270px;
        background-size: cover;
        background-position: center;
        transition: all 0.3s ease;
    }
</style>