@model IEnumerable<FashionStore.Models.Order>

@{
    ViewBag.Title = "Lịch sử mua hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Mã đơn hàng</th>
                                <th>Ngày đặt</th>
                                <th>Trạng thái</th>
                                <th>Tổng tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="product__cart__item">
                                            <div class="product__cart__item__text">
                                                <h6>@item.OrderCode</h6>
                                            </div>
                                        </td>
                                        <td class="cart__price">
                                            @item.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                        </td>
                                        <td class="cart__price">
                                            @if (item.Status == "PENDING")
                                            {
                                                <span class="badge badge-warning">Chờ xử lý</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-success">@item.Status</span>
                                            }
                                        </td>
                                        <td class="cart__price">
                                            @item.TotalAmount.ToString("N0") đ
                                        </td>
                                        <td>
                                            @* Link xem chi tiết các sản phẩm trong đơn này *@
                                            <a href="@Url.Action("Details", "OrderItems", new { id = item.OrderId })" class="primary-btn" style="padding: 10px 20px;">Chi tiết</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">Bạn chưa có đơn hàng nào.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>