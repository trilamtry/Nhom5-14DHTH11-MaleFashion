@model FashionStore.Models.AppUser
@{
    ViewBag.Title = "Check Out";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Đảm bảo sử dụng Layout chung của template
    var cart = ViewBag.Cart as FashionStore.Models.Cart;
    decimal total = ViewBag.TotalAmount ?? 0;
}
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            @using (Html.BeginForm("ProcessCheckout", "OrderItems", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <h6 class="checkout__title">Billing Details</h6>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="checkout__input">
                                    <p>Full Name<span>*</span></p>
                                    <input type="text" name="customerName" value="@Model.FullName" required>
                                </div>
                            </div>
                        </div>

                        <div class="checkout__input">
                            <p>Address<span>*</span></p>
                            <input type="text" name="fullAddress" placeholder="Street Address, Ward, District, Province" class="checkout__input__add" required>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Phone<span>*</span></p>
                                    <input type="text" name="phone" value="@Model.Phone" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input type="text" value="@Model.Email" readonly style="background-color: #f5f5f5;">
                                </div>
                            </div>
                        </div>

                        <div class="checkout__input">
                            <p>Order notes<span></span></p>
                            <input type="text" name="messageCard"
                                   placeholder="Notes about your order, e.g. special notes for delivery.">
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4 class="order__title">Your order</h4>
                            <div class="checkout__order__products">Product <span>Total</span></div>

                            <ul class="checkout__total__products">
                                @if (cart != null && cart.CartItems != null)
                                {
                                    int i = 1;
                                    foreach (var item in cart.CartItems)
                                    {
                                        <li>
                                            @(i++). ID: @item.VariantId (x @item.Quantity)
                                            <span>@((item.Quantity * (item.UnitPrice)).ToString()) đ</span>
                                        </li>
                                    }
                                }
                            </ul>

                            <ul class="checkout__total__all">
                                <li>Subtotal <span>@total.ToString("N0") đ</span></li>
                                <li>Total <span>@total.ToString("N0") đ</span></li>
                            </ul>

                            <div class="checkout__input__checkbox">
                                <label for="payment">
                                    Thanh toán khi nhận hàng (COD)
                                    <input type="checkbox" id="payment" checked disabled>
                                    <span class="checkmark"></span>
                                </label>
                            </div>

                            <p>Vui lòng kiểm tra kỹ thông tin giao hàng và danh sách sản phẩm trước khi đặt hàng.</p>

                            <button type="submit" class="site-btn">PLACE ORDER</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>