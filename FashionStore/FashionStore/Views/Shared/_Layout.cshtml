@{
    var user = (FashionStore.Models.AppUser)Session["user"];
    FashionStore.Models.ShopThoiTrangEntities db = new FashionStore.Models.ShopThoiTrangEntities();

    int countCart = 0;
    decimal totalCartPrice = 0;

    if (user != null)
    {
        // 1. Tìm giỏ hàng của user này
        var cart = db.Carts.FirstOrDefault(c => c.UserId == user.UserId);
        if (cart != null)
        {
            // 2. Đếm tổng số lượng (Quantity) của tất cả mặt hàng trong giỏ
            countCart = db.CartItems.Where(ci => ci.CartId == cart.CartId).Sum(ci => (int?)ci.Quantity) ?? 0;

            // 3. Tính tổng tiền
            totalCartPrice = db.CartItems
                               .Where(ci => ci.CartId == cart.CartId)
                               .Select(ci => (ci.Quantity ?? 0) * ci.UnitPrice)
                               .DefaultIfEmpty(0)
                               .Sum();
        }
    }
}
